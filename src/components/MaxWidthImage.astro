---
import { Image } from 'astro:assets';

interface Props {
    src: ImageMetadata;
    alt: string;
    quality?: 'low' | 'mid' | 'high' | 'max';
}

const { src, alt, quality } = Astro.props;
---

<Image
  class="maxWidth"
  src={src}
  alt={alt}
  quality={quality}
/>

<style>
    .maxWidth {
        max-width: 100%;
        height: auto;
    }
</style>